@model TinyPOC.Models.CreateLetterViewModel
@{
    ViewBag.Title = "Create Letter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Letter</h2>

@using (Html.BeginForm("CreateLetter", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Letter.Title)
        @Html.TextBoxFor(m => m.Letter.Title, new { @class = "form-control", Placeholder = "Letter Title" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Letter.Body)
        @Html.TextAreaFor(m => m.Letter.Body, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Letter.Body, string.Empty, new { @class = "text-danger" })
    </div>
    <input type="submit" value="Submit" />
}


<script>
    tinymce.init({
        selector: 'textarea',
        format: 'json',
        height: 500,
        menubar: false,
        plugins: [
          'advlist autolink lists link image charmap print preview anchor',
          'searchreplace visualblocks code fullscreen',
          'insertdatetime media table contextmenu paste code'
        ],
        toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
        content_css: '//www.tinymce.com/css/codepen.min.css'
    });
</script>